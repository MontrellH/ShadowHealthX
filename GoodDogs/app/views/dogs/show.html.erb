<html>
<head>
</head>
  <body class="web_page">
     <div class="clearfix">
          <div class="box">
            <% avatar = @dog.avatars[0] %>
            <%= link_to(image_tag(avatar.url, alt: 'Image', class: "fit_the_page"), avatar.url, target: '_blank') %>></img>
          </div>
          <div class="box">
            <p>
              <span class="dog-right-label">Name:</span>
              <span class="dog-right-desc"><%= @dog.name %></span>
            </p>    
            <p>
              <span class="dog-right-label">Breed:</span>
                <span class="dog-right-desc"><%= @dog.breed %></span>
            </p>
            <p>
              <span class="dog-right-label">Age:</span>
              <span class="dog-right-desc"><%= @dog.age %></span>
            </p>
            <p>
              <span class="dog-right-label">Description:</span>
              <span class="dog-right-desc"><%= @dog.description %></span>
            </p>       
            <p>
              <span class="dog-right-label">Points:</span>
              <span class="dog-right-desc"><%= @dog.points %></span>
            </p>
            <p>
              <span class="dog-right-label">Shelter:</span>
              <span class="dog-right-desc">
                <a href="../../shelters/<%=@shelter.id%>"><%= @shelter.name %></a>
              </span>
            </p>
            <div id = "carousel-example-generic" class= "carousel slide" data-ride= "carousel">
              <div class="carousel-inner">
                <% @dog.avatars.each do |avatar| %>
                  <div class="item">
                    <%= link_to(image_tag(avatar.url, alt: 'Image', class: "resize_me"), avatar.url, target: '_blank') %>
                  </div>
                  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                  </a>
                  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                  </a>
                <% end %>
              </div>
            </div>  
            <script type="text/javascript">
              $(function(){
              $('.carousel').carousel();
              $('.item:first').addClass('active');
              });
              </script>
              <%= link_to 'Edit', edit_dog_path(@dog) %>
       </div>
     </div>
    </body>
    </html>  


